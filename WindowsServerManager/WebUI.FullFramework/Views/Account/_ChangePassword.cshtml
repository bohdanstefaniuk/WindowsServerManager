@model WebUI.FullFramework.Models.ChangePasswordModel

<div style="padding: 15px;">
    @using (Ajax.BeginForm("ChangePassword", new AjaxOptions {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "change-password-target" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.UserId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row line">
            <p class="col-md-4">Старый пароль</p>
            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "input-text col-md-8" } })
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger col-md-8 col-md-offset-4" })
        </div>
        <div class="row line">
            <p class="col-md-4">Новый пароль</p>
            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "input-text col-md-8" } })
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger col-md-8 col-md-offset-4" })
        </div>
        <div class="row line">
            <p class="col-md-4">Повторите новый пароль</p>
            @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "input-text col-md-8" } })
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger col-md-8 col-md-offset-4" })
        </div>
        <br />
        <button type="submit" class="ts-btn-primary submitButton">Save</button>
    }
    <p>
        @ViewBag.ChangePasswordStatus
    </p>
</div>

